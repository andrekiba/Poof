<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Poof.App">
	<Application.Resources>
		<!-- Application resource dictionary -->
    <ResourceDictionary>

      <Color x:Key="Tint">#F1C40F</Color>
      <Color x:Key="BarTint">#E74C3C</Color>
      <Color x:Key="Back">#F3CE3A</Color>
	  <Color x:Key="Accent">#3498DB</Color>
      
      <!--<Color x:Key="Primary">#7A89C2</Color>
      <Color x:Key="PrimaryDark">#5D2ABB</Color>
      <Color x:Key="PrimaryDarkTranslucent">#9926213C</Color>
      <Color x:Key="Accent">#753BE4</Color>
      <Color x:Key="NavigationText">White</Color>
      <Color x:Key="LabelSectionText">#6D6D72</Color>
      <Color x:Key="DetailTextColor">#979797</Color>-->
			
      <Style  TargetType="Label" x:Key="LabelStyle">
        <Setter Property="TextColor" Value="#E74C3C" />
        <Setter Property="FontSize" Value="25" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontFamily">
          <Setter.Value>
            <OnPlatform x:TypeArguments="x:String">
	            <OnPlatform.iOS>MarkerFelt-Thin</OnPlatform.iOS>
	            <OnPlatform.Android>Droid Sans Mono</OnPlatform.Android>
	            <OnPlatform.WinPhone>Comic Sans MS</OnPlatform.WinPhone>
	        </OnPlatform>
          </Setter.Value>
        </Setter>
      </Style>

	  <Style  TargetType="Label" x:Key="LabelStyle1">
        <Setter Property="TextColor" Value="#E74C3C" />
        <Setter Property="FontSize" Value="25" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontFamily">
          <Setter.Value>
            <OnPlatform x:TypeArguments="x:String">
	            <OnPlatform.iOS>Pacifico</OnPlatform.iOS>
	            <OnPlatform.Android>Pacifico</OnPlatform.Android>
	            <OnPlatform.WinPhone>Pacifico</OnPlatform.WinPhone>
	        </OnPlatform>
          </Setter.Value>
        </Setter>
      </Style>
      
    </ResourceDictionary>
	</Application.Resources>
</Application>
